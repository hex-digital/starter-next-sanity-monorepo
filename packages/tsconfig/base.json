{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Default",
  "compilerOptions": {
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": false,
    "isolatedModules": true,
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "strict": true
    // Following rules were in old tsconfig but have been disabled for now for review.
    // If we decide we need them, add them, otherwise delete them.
    //    "importHelpers": true
    //    "sourceMap": true
  },
  "exclude": ["node_modules"],
  "ts-node": {
    "files": true,
    "require": ["tsconfig-paths/register"],
    "experimentalResolverFeatures": true,
    "compilerOptions": {
      "module": "CommonJS",
      "types": ["node"]
    }
  }
}
